		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from t_user where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from t_user where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<select id="getidbyphone" resultType="com.shaicha.users.domain.UserDO">
		select `id`,`user_id`,`open_id`,`nickname`,`password`,`phone`,`heard_url`,`name`,`identity_card`,`register_time`,`pay_num`,`serve_num`,`balance`,`restitution`,`pay_time`,`login_time`,`add_time`,`update_time`,`delete_flag`,`username`,`car_num`,`car_type`,`car_size`,`car_status`,`desc`,`address`,`refuse`,`ontime` from t_user where phone = #{value}
	</select>
	
	<select id="selectByName" parameterType="com.shaicha.users.domain.UserDO" resultType="com.shaicha.users.domain.UserDO">
	    select * from t_user
	    <where>
	        <if test="name != null">
	            name like CONCAT('%', '#{name}' , '%')
	        </if>
	    </where>
	</select>

</mapper>