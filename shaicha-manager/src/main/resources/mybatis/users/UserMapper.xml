	<insert id="save" parameterType="com.shaicha.users.domain.UserDO" useGeneratedKeys="true" keyProperty="id">
		insert into t_user
		(
			`user_id`,
			`open_id`, 
			`nickname`, 
			`password`, 
			`phone`, 
			`heard_url`, 
			`name`, 
			`identity_card`, 
			`register_time`, 
			`pay_num`, 
			`serve_num`, 
			`balance`, 
			`restitution`, 
			`pay_time`, 
			`login_time`, 
			`add_time`, 
			`update_time`, 
			`delete_flag`, 
			`username`,
			`sex`,
			`birthday`
		)
		values
		(
			#{userId},
			#{openId}, 
			#{nickname}, 
			#{password}, 
			#{phone}, 
			#{heardUrl}, 
			#{name}, 
			#{identityCard}, 
			#{registerTime}, 
			#{payNum}, 
			#{serveNum}, 
