<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shaicha.informationNEW.dao.ChanpinRecordListDao">

	<select id="get" resultType="com.shaicha.informationNEW.domain.ChanpinRecordListDO">
		select `id`,`chanpin_id`,`add_time`,`del_flag`,chanpin_name from t_chanpin_record_list where id = #{value}
	</select>

	<select id="list" resultType="com.shaicha.informationNEW.domain.ChanpinRecordListDO">
		select `id`,`chanpin_id`,`add_time`,`del_flag`,chanpin_name from t_chanpin_record_list
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="chanpinId != null and chanpinId != ''"> and chanpin_id = #{chanpinId} </if>
		  		  <if test="addTime != null and addTime != ''"> and add_time = #{addTime} </if>
		  		  <if test="delFlag != null and delFlag != ''"> and del_flag = #{delFlag} </if>
		  		  <if test="chanpinName != null and chanpinName != ''"> and chanpin_name = #{chanpinName} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from t_chanpin_record_list
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="chanpinId != null and chanpinId != ''"> and chanpin_id = #{chanpinId} </if>
		  		  <if test="addTime != null and addTime != ''"> and add_time = #{addTime} </if>
		  		  <if test="delFlag != null and delFlag != ''"> and del_flag = #{delFlag} </if>
		  		  <if test="chanpinName != null and chanpinName != ''"> and chanpin_name = #{chanpinName} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.shaicha.informationNEW.domain.ChanpinRecordListDO" useGeneratedKeys="true" keyProperty="id">
		insert into t_chanpin_record_list
		(
			`chanpin_id`, 
			`add_time`, 
			`del_flag`,
			chanpin_name
		)
		values
		(
			#{chanpinId}, 
			#{addTime}, 
			#{delFlag},
			#{chanpinName}
		)
	</insert>
	 
	<update id="update" parameterType="com.shaicha.informationNEW.domain.ChanpinRecordListDO">
		update t_chanpin_record_list 
		<set>
			<if test="chanpinId != null">`chanpin_id` = #{chanpinId}, </if>
			<if test="addTime != null">`add_time` = #{addTime}, </if>
			<if test="delFlag != null">`del_flag` = #{delFlag},</if>
			<if test="chanpinName != null">`chanpin_name` = #{chanpinName}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from t_chanpin_record_list where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from t_chanpin_record_list where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>